import turtle

paper = turtle.Screen()
medad = turtle.Turtle()

size =int( turtle.textinput("size", "andaze tool zele vard konid:") ) 
# sakht moraba
medad.forward(size)
medad.left(90)
medad.forward(size)
medad.left(90)
medad.forward(size)
medad.left(90)
medad.forward(size)
medad.left(90)
turtle.done()
